{
  "compilerOptions": {
    "rootDir": "./client",
    "baseUrl": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~*": [
        "./client/*",
      ],
    },
    "jsx": "react",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "client/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "ext": "ts,tsx"
}